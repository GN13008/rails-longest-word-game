<div class="appcontainer">
  <h1>This is the Best Game Ever</h1>
  <div class="letters">
    <% @letters.each do |letter| %>
      <div class="letter">
        <%= letter %>
      </div>
    <% end %>
  </div>
  <div class="container m-4 form-group">
    <label for="">What is the longest word you can find?</label>
    <form action="score" class="form-inline">
      <input type="text" name="word" class="form-control">
      <input name="letters" type="hidden" value=<%= @letters.join() %> />
      <%= hidden_field_tag :authenticity_token, form_authenticity_token %>
      <input type="submit" value="Play" class="btn btn-primary m-4">
    </form>
  </div>
</div>
